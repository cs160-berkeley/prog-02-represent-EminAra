<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs160.joleary.catnip.congressional"
    android:background="#2c3e50">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2980b9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:id="@+id/insidecard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dianne Feinstein"
            android:id="@+id/textName"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ecf0f1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:id="@+id/imgSen"
            android:layout_column="0"
            android:src="@drawable/rectangle_5"
            android:layout_gravity="right"
            android:layout_rowSpan="1"
            android:layout_rowWeight="0"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Democratic Senator - CA"
            android:id="@+id/textTitle"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ecf0f1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="senator@feinstein.senate.gov\nhttp://feinstein.senate.gov"
            android:id="@+id/textComm"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ecf0f1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imgSen"
            android:layout_alignStart="@+id/textTwitter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today we reflect on the contributions and leadership of U.S. presidents throughout our nationâ€™s great history. Happy #PresidentsDay."
            android:id="@+id/textTwitter"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:textColor="#ecf0f1"
            android:layout_alignTop="@+id/whitebox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/whitebox"
            android:src="@drawable/rectangle_12"
            android:adjustViewBounds="true"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/imgSen" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView3"
            android:src="@drawable/rectangle_6"
            android:layout_below="@+id/textComm"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_marginTop="20dp" />

    </RelativeLayout>


</RelativeLayout>
