<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2980b9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sen\n Barbara Boxer\n (D)"
        android:id="@+id/textSenatorName"
        android:gravity="center"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#ecf0f1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="i"
        android:id="@+id/btnMoreInfo"
        android:textAllCaps="false"
        android:capitalize="none"
        android:clickable="true"
        android:background="@drawable/button"
        android:textColor="#ecf0f1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@+id/imgNext1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:background="@drawable/indicator"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="100dp"
        android:id="@+id/imgNext1"
        android:background="@drawable/indicator_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="100dp"
        android:id="@+id/imgPrev1"
        android:src="@drawable/inidcator_left"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imgNext1"
        android:layout_alignParentStart="true" />

</RelativeLayout>